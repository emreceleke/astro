---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'DEPO';
const description = 'About your blog.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>DEPO</h1>
<h2> Reg Dosyalari </h2>
    <p>XD <a download href="https://www.mediafire.com/file/ezm1nru3uplwqf4/Disable_Copilot.reg/file">Disable Co-Pilot</a></p>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
